}
.container{
  background-color: rgb(255, 255, 255);
  padding-top:0;
}
.head{
  width: 100%;
  border-left:rgb(77, 208, 225) 15rpx solid;
  box-sizing: border-box;
  padding-left: 15rpx;
  background-color: white;
  margin:30rpx 35rpx 30rpx 35rpx;
}
.voteTitle{
  font-size: medium;
  font-weight: 700;
}
.dueDate{
  font-size: smaller;
  color:rgb(88, 88, 88);
}
.questionRow{
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx 15rpx 30rpx 15rpx;
  background-color:white;
}
.questionTitle{
  font-size: large;
  font-weight: bold;
  padding:15rpx 0 15rpx 0;
